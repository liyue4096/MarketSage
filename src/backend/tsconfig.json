{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "rootDir": ".",
    "declaration": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "typeRoots": ["./lambda-layers/shared/nodejs/node_modules/@types"]
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "**/node_modules/*", "dist"]
}